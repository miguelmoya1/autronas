{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@autronas/frontend/actions": ["libs/frontend/actions/src/index.ts"],
      "@autronas/frontend/components": [
        "libs/frontend/components/src/index.ts"
      ],
      "@autronas/frontend/guards": ["libs/frontend/guards/src/index.ts"],
      "@autronas/frontend/helpers": ["libs/frontend/helpers/src/index.ts"],
      "@autronas/frontend/interceptors": [
        "libs/frontend/interceptors/src/index.ts"
      ],
      "@autronas/frontend/pipes": ["libs/frontend/pipes/src/index.ts"],
      "@autronas/frontend/resolvers": ["libs/frontend/resolvers/src/index.ts"],
      "@autronas/frontend/services": ["libs/frontend/services/src/index.ts"],
      "@autronas/frontend/shared": ["libs/frontend/shared/src/index.ts"],
      "@autronas/frontend/store": ["libs/frontend/store/src/index.ts"],
      "@autronas/frontend/views": ["libs/frontend/views/src/index.ts"],
      "@autronas/backend/commands": ["libs/backend/commands/src/index.ts"],
      "@autronas/backend/database": ["libs/backend/database/src/index.ts"],
      "@autronas/backend/decorators": ["libs/backend/decorators/src/index.ts"],
      "@autronas/backend/dto": ["libs/backend/dto/src/index.ts"],
      "@autronas/backend/entities": ["libs/backend/entities/src/index.ts"],
      "@autronas/backend/events": ["libs/backend/events/src/index.ts"],
      "@autronas/backend/gateways": ["libs/backend/gateways/src/index.ts"],
      "@autronas/backend/guards": ["libs/backend/guards/src/index.ts"],
      "@autronas/backend/migrations": ["libs/backend/migrations/src/index.ts"],
      "@autronas/backend/queries": ["libs/backend/queries/src/index.ts"],
      "@autronas/backend/sagas": ["libs/backend/sagas/src/index.ts"],
      "@autronas/backend/services": ["libs/backend/services/src/index.ts"],
      "@autronas/backend/shared": ["libs/backend/shared/src/index.ts"],
      "@autronas/backend/testing": ["libs/backend/testing/src/index.ts"],
      "@autronas/core/enums": ["libs/core/enums/src/index.ts"],
      "@autronas/core/interfaces": ["libs/core/interfaces/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
